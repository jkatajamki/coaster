{
  "name": "coaster",
  "version": "0.0.1",
  "description": "Coaster. Remade.",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "npm run clean && tsc -p ./src/server/tsconfig.json",
    "build:client": "webpack --config ./src/client/webpack.config.js",
    "clean": "rm -rf ./dist && mkdir -p dist",
    "dev:client": "npm run watch:client",
    "dev:client:start": "NODE_ENV=development webpack-dev-server --config ./src/client/webpack.config.js",
    "dev:start": "docker-compose up",
    "dev:server": "NODE_ENV=development npm run watch:server",
    "install-deps": "docker-compose run --rm coaster npm i",
    "lint": "eslint 'src/**/*.ts'",
    "lint:api": "eslint 'src/server/**/*.ts'",
    "migrate:create": "NODE_ENV=development ./db-migrate.js create",
    "migrate:up": "NODE_ENV=development ./db-migrate.js up",
    "migrate:down": "NODE_ENV=development ./db-migrate.js down",
    "setup:migrate:up": "./db-migrate.js up",
    "start": "npm run build && node dist/server/connect.js",
    "test": "docker-compose run --rm coaster npm run test:api",
    "test:watch": "docker-compose run --rm coaster npm run test:api:watch",
    "test:api": "npm run lint:api && jest --coverage",
    "test:api:watch": "jest --coverage --watchAll",
    "watch:server": "tsc-watch --watch --pretty --project ./src/server/tsconfig.json --onSuccess 'node --inspect dist/server/connect.js'",
    "watch:client": "tsc-watch --watch --pretty --project ./src/client/tsconfig.json --onSuccess 'npm run dev:client:start'"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFiles": [
      "./dist/server/test/setEnvVars.js"
    ]
  },
  "dependencies": {
    "axios": "0.21.0",
    "bcrypt": "5.0.0",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "date-fns": "2.11.0",
    "dotenv-safe": "8.2.0",
    "express": "5.0.0-alpha.8",
    "express-winston": "4.0.2",
    "fp-ts": "2.5.3",
    "jsonwebtoken": "8.5.1",
    "mobx": "5.15.4",
    "mobx-react-lite": "2.0.7",
    "pg": "8.0.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/body-parser": "1.17.1",
    "@types/compression": "1.7.0",
    "@types/config": "0.0.36",
    "@types/dotenv-safe": "8.1.0",
    "@types/express": "4.17.2",
    "@types/express-winston": "4.0.0",
    "@types/jest": "25.1.3",
    "@types/jsonwebtoken": "8.3.9",
    "@types/pg": "7.14.3",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.7",
    "@types/source-map-support": "0.5.1",
    "@types/supertest": "2.0.8",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "2.19.0",
    "@typescript-eslint/parser": "2.19.0",
    "db-migrate": "0.11.10",
    "db-migrate-pg": "1.2.1",
    "eslint": "6.8.0",
    "eslint-plugin-react": "7.19.0",
    "html-webpack-plugin": "4.3.0",
    "jest": "25.1.0",
    "source-map-loader": "0.2.4",
    "source-map-support": "0.5.16",
    "supertest": "4.0.2",
    "ts-jest": "25.4.0",
    "ts-loader": "7.0.3",
    "tsc-watch": "4.1.0",
    "typescript": "3.7.5",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.11.0"
  }
}
