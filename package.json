  "dependencies": {
    "@typescript-eslint/eslint-plugin": "2.19.0",
    "@typescript-eslint/parser": "2.19.0",
    "eslint": "6.8.0",
    "typescript": "3.7.5"
  },
  "devDependencies": {
    "tsc-watch": "4.1.0"
  }
}
