{
  "name": "coaster",
  "version": "0.0.1",
  "description": "Coaster. Remade.",
  "scripts": {
    "clean": "rm -rf ./dist && mkdir -p dist",
    "migrate:create": "NODE_ENV=dev ./db-migrate.js create",
    "migrate:up": "NODE_ENV=dev ./db-migrate.js up",
    "dev": "NODE_ENV=dev npm run dev:server",
    "dev:server": "NODE_ENV=dev npm run clean && npm run watch:server",
    "test:api": "jest --coverage",
    "test:api:watch": "jest --coverage --watchAll",
    "lint": "eslint 'src/**/*.ts'",
    "watch:server": "tsc-watch --watch --pretty --onSuccess 'node --inspect dist/server/server.js'"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "config": "3.2.5",
    "db-migrate": "0.11.6",
    "db-migrate-pg": "1.0.0",
    "express": "4.17.1",
    "express-winston": "4.0.2",
    "pg": "7.18.1",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.1",
    "@types/compression": "1.7.0",
    "@types/config": "0.0.36",
    "@types/express": "4.17.2",
    "@types/express-winston": "4.0.0",
    "@types/jest": "25.1.3",
    "@types/pg": "7.14.1",
    "@types/source-map-support": "0.5.1",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "2.19.0",
    "@typescript-eslint/parser": "2.19.0",
    "eslint": "6.8.0",
    "jest": "25.1.0",
    "source-map-support": "0.5.16",
    "supertest": "4.0.2",
    "ts-jest": "25.2.1",
    "tsc-watch": "4.1.0",
    "typescript": "3.7.5"
  }
}
